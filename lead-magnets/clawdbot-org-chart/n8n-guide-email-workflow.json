{
  "name": "Clawdbot Guide Email Delivery",
  "nodes": [
    {
      "id": "webhook-trigger",
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [250, 300],
      "parameters": {
        "httpMethod": "POST",
        "path": "clawdbot-guide-signup",
        "responseMode": "onReceived"
      },
      "webhookId": "clawdbot-guide-signup"
    },
    {
      "id": "send-email",
      "name": "Send Guide Email",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 2.1,
      "position": [500, 300],
      "parameters": {
        "resource": "email",
        "operation": "send",
        "fromEmail": "AI with Remy <your-gmail@gmail.com>",
        "toEmail": "={{ $json.body.email }}",
        "subject": "Your Clawdbot Org Chart Guide",
        "emailFormat": "html",
        "html": "<!DOCTYPE html>\n<html>\n<head>\n  <meta charset=\"utf-8\">\n  <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n</head>\n<body style=\"margin:0;padding:0;background-color:#f5f5f0;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,sans-serif;\">\n  <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" style=\"background-color:#f5f5f0;padding:40px 20px;\">\n    <tr>\n      <td align=\"center\">\n        <table width=\"100%\" style=\"max-width:520px;background-color:#ffffff;border:1px solid #e0e0e0;border-radius:8px;overflow:hidden;\">\n          <!-- Main Content -->\n          <tr>\n            <td style=\"padding:40px 32px 32px;text-align:center;\">\n              <p style=\"margin:0 0 24px;font-family:monospace;font-size:11px;text-transform:uppercase;letter-spacing:0.1em;color:#666;\">AI WITH REMY</p>\n              <h1 style=\"margin:0 0 16px;font-size:24px;font-weight:700;color:#1a1a1a;line-height:1.3;\">Your Clawdbot Org Chart Guide</h1>\n              <p style=\"margin:0 0 32px;font-size:16px;color:#555;line-height:1.6;\">Thanks for signing up. Here's your guide to building multi-agent systems &mdash; from a single bot to a full AI org chart.</p>\n              <a href=\"https://www.notion.so/Build-Your-Clawdbot-Org-Chart-From-One-Bot-to-a-Full-AI-Team-3014eefac394813d9c5ed8f64f0dd114\" style=\"display:inline-block;padding:14px 32px;background-color:#1a1a1a;color:#ffffff;text-decoration:none;border-radius:6px;font-size:15px;font-weight:600;\">Read the Guide</a>\n            </td>\n          </tr>\n          <!-- Footer -->\n          <tr>\n            <td style=\"padding:24px 32px;border-top:1px solid #e8e8e8;text-align:center;\">\n              <p style=\"margin:0;font-size:13px;color:#999;line-height:1.5;\">You're also subscribed to the Thursday newsletter &mdash; AI workflows, tools, and playbooks to stay lean and move fast.</p>\n            </td>\n          </tr>\n        </table>\n      </td>\n    </tr>\n  </table>\n</body>\n</html>",
        "options": {
          "appendAttribution": false
        }
      },
      "credentials": {
        "smtp": {
          "id": "REPLACE_WITH_YOUR_SMTP_CREDENTIAL_ID",
          "name": "Gmail SMTP"
        }
      }
    }
  ],
  "connections": {
    "Webhook": {
      "main": [
        [
          {
            "node": "Send Guide Email",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1"
  }
}
